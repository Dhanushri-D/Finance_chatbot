# Environment Configuration for Personal Finance Chatbot
# Copy this to .env and update with your credentials

# HuggingFace Configuration (Optional - for better model access)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# IBM Cloud Configuration (Optional - if using IBM Watson services)
IBM_WATSON_API_KEY=your_ibm_watson_api_key
IBM_WATSON_URL=your_ibm_watson_url

# Application Settings
MAX_REQUESTS_PER_HOUR=50
MODEL_CACHE_DIR=./model_cache

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=finance_chatbot.log

# Security Settings
RATE_LIMIT_ENABLED=true
INPUT_SANITIZATION_ENABLED=true